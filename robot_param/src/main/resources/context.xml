<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="t1000" class="kz.training.spring.impls.ModelT1000"
          p:head-ref="toshibaHead"
          p:hand-ref="toshibaHand"
          p:leg-ref="sonyLeg">

        <constructor-arg value="silver" index="0"/>
        <constructor-arg value="2005" index="1" type="int"/>
        <constructor-arg value="true" index="2" type="boolean"/>

    </bean>

    <bean id="t1000Empty" class="kz.training.spring.impls.ModelT1000">

        <constructor-arg ref="toshibaHead"/>
        <constructor-arg ref="sonyHand"/>
        <constructor-arg ref="sonyLeg"/>

    </bean>

    <bean id="sonyHead" class="kz.training.spring.impls.sony.SonyHead"/>
    <bean id="sonyHand" class="kz.training.spring.impls.sony.SonyHand"/>
    <bean id="sonyLeg" class="kz.training.spring.impls.sony.SonyLeg"/>

    <bean id="toshibaHead" class="kz.training.spring.impls.toshiba.ToshibaHead"/>
    <bean id="toshibaHand" class="kz.training.spring.impls.toshiba.ToshibaHand"/>
    <bean id="toshibaLeg" class="kz.training.spring.impls.toshiba.ToshibaLeg"/>

</beans>
